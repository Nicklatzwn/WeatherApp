doctype html
html(lang='en')
    include common/head.pug
    +head("Main Page")
    style.
        body {
            padding: 0 0em;
            font-family: Arial, sans-serif;
            color: #024457;
            background: #d0bf80;
            }

            h1 {
                font-family: Verdana;
                font-weight: lighter;
                color: #024457;
            }

            h1 span {
                 color: #167F92;
            }
    body
        include common/navbar.pug
        +navbar(user)
        .container
            .row.align-items-center
                .col-md-6.order-md-1.text-center.text-md-left.pr-md-5
                    h1.mb-3 Weather Station
                    if user
                        p.lead This app is created for demonstration
                        p.lead.mb-4 Navigate to the navBar
                    else
                        p.lead Please Login or Sign Up
                    br
                    br
                    img(src="/images/panel.png")
        include common/footer.pug
        +footer()
        script(src='/javascripts/routes.js')