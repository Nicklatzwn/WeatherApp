mixin navbar(user)
    nav.navbar.navbar-expand.navbar-light.bg-light
        a(href="/", aria-label="Golden Goose").navbar-brand.mr-0.mr-md-2
            img(src="/images/centaur_logo.jpg", height="70")
        .collapse.navbar-collapse
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href="/") Home
                li.nav-item
                    a.nav-link(href="/routes") Routes
        .navbar-right
            if user
                span.navbar-text Hello #{user.username}!
        .navbar-right
            ul.navbar-nav.mr-auto
                li.nav-item
                    a.nav-link(href="/signup") Sign up
                li.nav-item
                    a.nav-link(href="/login") Login
                li.nav-item
                    a.nav-link(href="/logout") Logout
style.
    .bg-light {
        background-color: #41DFD3 !important;
    }