doctype html
html(lang='en')
    include ../common/head.pug
    +head("Login to Starter MVP")
    style.
        body {
            padding: 0 0em;
            font-family: Arial, sans-serif;
            color: #024457;
            background: #fdeeb4;
        }

        h1 {
            font-family: Verdana;
            font-weight: lighter;
            color: #024457;
        }

        h1 span {
            color: #167F92;
        }
    body
        header
            include ../common/navbar.pug
            +navbar()
            .container
                .row
                    .col-sm-12.offset-md-2.col-md-8
                        .jumbotron
                            h2.text-center Login
                            .row
                                .col-sm-12.col-md-12.col-xs-12
                                    form(action='/login', method='POST')
                                        div.formgroup
                                            label.small.mb-1.mt-3 Username:
                                            input(placeholder='Enter your username', required=true, name='username', type='username', value='').form-control
                                            if (message && message.message_username)
                                            p.small.text-danger #{message.message_username}
                                            label.small.mb-1.mt-3 Password:
                                            input(placeholder='Enter your current password', required=true, name='password', type='password', value='').form-control
                                            if (message && message.message_password)
                                            p.small.text-danger #{message.message_password}
                                            button.mt-3.btn.btn-primary(type='submit') Log in
                                            p.mt-2.mb-0
                                                | Forgot your password? #[a(href="#") Reset here].
                                            p.m-0
                                                | Don't have an account? #[a(href="/signup") Sign up here].

        include ../common/footer.pug
        +footer()