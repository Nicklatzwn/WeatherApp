doctype html
html(lang='en')
    include ../common/head.pug
    +head("Sign up to Starter MVP")
    style.
        body {
            padding: 0 0em;
            font-family: Arial, sans-serif;
            color: #024457;
            background: #88a2b8;
        }

        h1 {
            font-family: Verdana;
            font-weight: lighter;
            color: #024457;
        }

        h1 span {
            color: #167F92;
        }
    body
        header
            include ../common/navbar.pug
            +navbar()
            .container
                .row
                    .col-sm-12.offset-md-2.col-md-8
                        .jumbotron
                            h2.text-center Sign up
                            .row
                                .col-sm-12.col-md-12
                                    form(action='/signup', method='POST')
                                        div.formgroup
                                            label.small.mb-1.mt-3 Username:
                                            input(placeholder='Please enter your username', required=true, name='username', type='username', value=formData.username).form-control
                                            if (errors && errors.username)
                                                p.small.text-danger #{errors.username}
                                            label.small.mb-1.mt-3 Password:
                                            input(placeholder='New Password',required=true, name='password', type='password', value='').form-control
                                            if (errors && errors.password)
                                                p.small.text-danger #{errors.password}
                                            button.mt-3.btn.btn-primary(type='submit') Sign up
                                            p.mt-2.mb-0
                                                | Already have an account? #[a(href="/login") Log in here].

        include ../common/footer.pug
        +footer()